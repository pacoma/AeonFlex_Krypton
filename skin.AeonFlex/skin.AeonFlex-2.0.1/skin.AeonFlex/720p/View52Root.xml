<?xml version="1.0" encoding="UTF-8"?>
<includes>
<include name="View50RootView">
	<control type="group">
		<animation effect="fade" time="400">VisibleChange</animation>
		<visible>Control.IsVisible(50)</visible>
		<control type="group">
			<animation effect="slide" time="500" start="0,400" end="0,0" tween="cubic" easing="out">WindowOpen</animation>
			<animation effect="slide" time="500" start="0,400" end="0,0" tween="cubic" easing="out">Visible</animation>
			<animation effect="fade" time="200" start="100" end="0">Hidden</animation>
			<visible>![Window.IsVisible(addonsettings) | Window.IsVisible(contentsettings) | Window.IsVisible(filebrowser)]</visible>
			<control type="fixedlist" id="50">
				<viewtype label="VideoRoot">list</viewtype>
				<left>600</left>
				<top>50</top>
				<width>680</width>
				<height>500</height>
				<pagecontrol>80</pagecontrol>
				<onleft>SetFocus(9000)</onleft><!-- menue -->
				<onright condition="!ListItem.IsParentFolder + Integer.IsGreater(Container(50).NumPages,1)">80</onright>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<scrolltime>450</scrolltime>
				<preloaditems>2</preloaditems>
				<include>OnInfoContent</include>
				<animation effect="slide" start="0,0" end="-30,0" time="200" easing="inout" tween="cubic" condition="Control.HasFocus(80)">Conditional</animation>
				<visible>[Container.Content(addons) | Container.Content(actors) | Container.Content(files) | Container.Content(mixed) | Container.Content(musicvideos) | Container.Content(videos) | Container.Content()] | [Container.Content(movies) + String.Contains(Skin.String(PLS_FilmViewtype),Filelist) + String.Contains(Container.FolderPath,xsp)] | [Container.Content(movies) + String.Contains(Skin.String(FilmViewtype),Filelist) + !String.Contains(Container.FolderPath,xsp)] | [Container.Content(tvshows) + String.Contains(Skin.String(TVViewtype),Filelist) + !String.Contains(Container.FolderPath,xsp)] | [Container.Content(tvshows) + String.Contains(Skin.String(PLS_TVViewtype),Filelist) + String.Contains(Container.FolderPath,xsp)] | [Container.Content(episodes) + String.Contains(Skin.String(EpisodeViewtype),Filelist) + !String.Contains(Container.FolderPath,xsp)] | [Container.Content(episodes) + String.Contains(Skin.String(PLS_EpisodeViewtype),Filelist) + String.Contains(Container.FolderPath,xsp)] | [Container.Content(seasons) + String.Contains(Skin.String(StaffelViewtype),Filelist)] | [Container.Content(sets) + String.Contains(Skin.String(SetViewtype),Filelist)] | [Window.IsVisible(videos) + Container.Content(genres) + String.Contains(Skin.String(GenreViewtype),Filelist)] | [Container.Content(albums) + String.Contains(Skin.String(AlbumViewtype),Filelist)] | [Container.Content(artists) + String.Contains(Skin.String(ArtistViewtype),Filelist)] | [Container.Content(songs) + String.Contains(Skin.String(SongViewtype),Filelist)] | !String.IsEmpty(Window(home).Property(Viewtypepreview))</visible>
				<itemlayout height="50">
					<control type="image">
						<width>680</width>
						<height>1</height>
						<texture diffuse="backgrounds/background-overlay-diffuse_v.png">backgrounds/line.png</texture>
						<colordiffuse>$VAR[AC_value_shadow_color]</colordiffuse>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>2</top>
						<width>540</width>
						<height>30</height>
						<align>right</align>
						<textcolor>TextColorSecondary</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>32</top>
						<width>540</width>
						<height>10</height>
						<font>RegularSmall</font>
						<align>right</align>
						<textcolor>TextColorSecondary</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<include content="watched_overlay_listLabel"><!-- watched_overlay -->
						<param name="left">636</param>
						<param name="top">8</param>
						<param name="width">30</param>
						<param name="height">30</param>
					</include>
				</itemlayout>
				<focusedlayout height="50">
					<control type="image">
						<width>680</width>
						<height>1</height>
						<texture diffuse="backgrounds/background-overlay-diffuse_v.png">backgrounds/line.png</texture>
						<colordiffuse>$VAR[AC_value_shadow_color]</colordiffuse>
						<visible>!Control.HasFocus(50)</visible>
					</control>
					<control type="image">
						<left>50</left>
						<width>630</width>
						<height>50</height>
						<texture diffuse="backgrounds/background-overlay-diffuse_v.png" colordiffuse="ACSkinColor">buttons/button_focus.png</texture>
						<visible>Control.HasFocus(50)</visible>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>2</top>
						<width>540</width>
						<height>30</height>
						<font>RegularLarge</font>
						<align>right</align>
						<textcolor>TextColorFocus</textcolor>
						<selectedcolor>TextColorSelectFO</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(50)</visible>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>2</top>
						<width>540</width>
						<height>30</height>
						<font>RegularLarge</font>
						<align>right</align>
						<textcolor>TextColorSecondary</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(50)</visible>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>32</top>
						<width>540</width>
						<height>10</height>
						<font>RegularSmall</font>
						<align>right</align>
						<textcolor>TextColorSecondary</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<visible>!Control.HasFocus(50)</visible>
					</control>
					<control type="label"><!-- Text Liste rechts -->
						<left>105</left>
						<top>32</top>
						<width>540</width>
						<height>10</height>
						<font>RegularSmall</font>
						<align>right</align>
						<textcolor>TextColorFocus</textcolor>
						<selectedcolor>TextColorSelectFO</selectedcolor>
						<label>$INFO[ListItem.Label2]</label>
						<visible>Control.HasFocus(50)</visible>
					</control>
					<include content="watched_overlay_listLabel"><!-- watched_overlay -->
						<param name="left">636</param>
						<param name="top">8</param>
						<param name="width">30</param>
						<param name="height">30</param>
					</include>
				</focusedlayout>
			</control>
			<control type="group"><!-- Artwork bottomline -->
				<left>30</left>
				<top>200</top>
				<visible>!ListItem.IsParentFolder</visible>
				<control type="group">
					<top>50</top>
					<include>animation_vhoc_fade</include>
					<control type="image"><!-- reflect -->
						<left>0</left>
						<top>381</top>
						<width>243</width>
						<height>362</height>
						<bordersize>8</bordersize>
						<fadetime>FanartCrossFadeTime</fadetime>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<texture border="8" flipy="true" fallback="defaultpictures/fallbacks/DefaultMovies.png" diffuse="borders/poster-reflect.png" background="true">$VAR[art_value_poster]</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>40</top>
						<width>243</width>
						<height>362</height>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
						<texture fallback="defaultpictures/fallbacks/DefaultMovies.png" background="true">$VAR[art_value_poster]</texture>
						<bordertexture border="8" colordiffuse="$VAR[AC_value_shadow_color]">borders/border6.png</bordertexture>
						<bordersize>8</bordersize>
					</control>
				</control>
			</control>
		</control>
		<control type="scrollbar" id="80"><!-- scrollbar list -->
			<include>scrollbar_vertical</include>
			<left>1250</left>
			<top>20</top>
			<height>500</height>
			<onleft>50</onleft>
			<onright>50</onright>
			<visible allowhiddenfocus="true">Control.HasFocus(80)</visible>
		</control>
	</control>
</include>
</includes>
