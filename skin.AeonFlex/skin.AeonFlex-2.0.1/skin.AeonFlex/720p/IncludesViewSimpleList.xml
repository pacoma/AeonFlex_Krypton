			<bordersize>32</bordersize>
			<texture background="true">$VAR[viewSimpleList-value-wildcard3-clearartwork]</texture>
		</control>
		<control type="grouplist"><!-- Info -->
			<left>25</left>
			<top>25</top>
			<width>380</width>
			<height>180</height>
			<orientation>vertical</orientation>
			<itemgap>5</itemgap>
			<include>viewglobal_topelements_textinfo</include>
			<visible>String.Contains(Skin.String(SimpleListRow1),Info) | String.Contains(Skin.String(SimpleListRow2),Info) | String.Contains(Skin.String(SimpleListRow3),Info)</visible>
			<animation effect="slide" end="0,220" time="0" reversible="false" condition="String.Contains(Skin.String(SimpleListRow2),Info)">Conditional</animation>
			<animation effect="slide" end="0,440" time="0" reversible="false" condition="String.Contains(Skin.String(SimpleListRow3),Info)">Conditional</animation>
		</control>
		<control type="textbox"><!-- plot -->
			<left>25</left>
			<top>25</top>
			<width>323</width>
			<include>PlotNormal176</include>
			<include>viewglobal_topelements_plot</include>
			<visible>String.Contains(Skin.String(SimpleListRow1),Plot) | String.IsEmpty(Skin.String(SimpleListRow2)) | String.Contains(Skin.String(SimpleListRow2),Plot) | String.Contains(Skin.String(SimpleListRow3),Plot)</visible>
			<animation effect="slide" end="0,220" time="0" reversible="false" condition="String.IsEmpty(Skin.String(SimpleListRow2)) | String.Contains(Skin.String(SimpleListRow2),Plot)">Conditional</animation>
			<animation effect="slide" end="0,440" time="0" reversible="false" condition="String.Contains(Skin.String(SimpleListRow3),Plot)">Conditional</animation>
		</control>
		<control type="group"><!-- content -->
			<top>15</top>
			<visible>String.Contains(Skin.String(SimpleListRow1),Content) | String.Contains(Skin.String(SimpleListRow2),Content) | String.Contains(Skin.String(SimpleListRow3),Content)</visible>
			<animation effect="slide" end="0,220" time="0" reversible="false" condition="String.Contains(Skin.String(SimpleListRow2),Content)">Conditional</animation>
			<animation effect="slide" end="0,440" time="0" reversible="false" condition="String.Contains(Skin.String(SimpleListRow3),Content)">Conditional</animation>
			<control type="label">
				<left>5</left>
				<width>313</width>
				<height>22</height>
				<label>[COLOR=TextColor2]$LOCALIZE[31088]:[/COLOR] $VAR[videocontent_similarlabel]</label>
				<font>SemiNormal</font>
			</control>
			<control type="fixedlist" id="5363">
				<viewtype>list</viewtype>
				<top>30</top>
				<width>363</width>
				<height>157</height>
				<onleft>6661</onleft><!-- back -->
				<onright>66</onright><!-- DB list -->
				<onup>5363</onup>
				<ondown>5363</ondown>
				<focusposition>0</focusposition>
				<orientation>vertical</orientation>
				<scrolltime>450</scrolltime>
				<visible allowhiddenfocus="true">[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<itemlayout width="363" height="30">
					<control type="label">
						<left>25</left>
						<top>0</top>
						<width>313</width>
						<height>30</height>
						<scroll>false</scroll>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]$INFO[ListItem.Episode, (,)]</label>
					</control>
				</itemlayout>
				<focusedlayout width="363" height="30">
					<control type="image">
						<width>363</width>
						<height>30</height>
						<include>global_listdiffusefocustexture_flip</include>
						<visible>Control.HasFocus(5363)</visible>
					</control>
					<control type="label">
						<left>25</left>
						<top>0</top>
						<width>313</width>
						<height>30</height>
						<font>RegularNormal</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]$INFO[ListItem.Episode, (,)]</label>
						<visible>!Control.HasFocus(5363)</visible>
					</control>
					<control type="label">
						<left>25</left>
						<top>0</top>
						<width>313</width>
						<height>30</height>
						<textcolor>TextColorFocus</textcolor>
						<selectedcolor>TextColorSelectFO</selectedcolor>
						<label>$INFO[ListItem.Label]$INFO[ListItem.Episode, (,)]</label>
						<visible>Control.HasFocus(5363)</visible>
					</control>
				</focusedlayout>
				<content limit="$VAR[videocontent_similar_limit]" sortby="$VAR[videocontent_similar_sort]" target="video">$VAR[videocontent_similar]</content>
				<onclick condition="String.IsEqual(ListItem.DBTYPE,movie)">PlayMedia("$INFO[ListItem.FilenameandPath]")</onclick><!-- check -->
				<onclick condition="String.IsEqual(ListItem.DBTYPE,tvshow)">ActivateWindow(videos,&quot;videodb://tvshows/titles/$INFO[ListItem.DBID]/&quot;)</onclick><!-- check -->
			</control>
		</control>
	</control>
	<control type="group">
		<visible>ListItem.IsParentFolder</visible>
		<control type="image">
			<top>0</top>
			<left>0</left>
			<width>363</width>
			<height>720</height>
			<aspectratio scalediffuse="true" align="right" aligny="center">scale</aspectratio>
			<texture background="true">folderback/FolderBackBasic.png</texture>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
		</control>
	</control>
</include>
	

