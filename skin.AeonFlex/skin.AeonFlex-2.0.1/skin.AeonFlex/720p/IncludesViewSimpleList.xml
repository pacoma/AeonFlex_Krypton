<!-- Include SimpleListTop -->
<include name="viewSimpleList_video_panelelements">
	<control type="group">
		<visible>!ListItem.IsParentFolder</visible>
		<control type="image">
			<width>363</width>
			<height>220</height>
			<texture diffuse="artworks/Infopanel_vertical_square_diffuse.png">White.png</texture>
			<colordiffuse>ACBackgroundColor_light</colordiffuse>
			<visible>String.Contains(Skin.String(SimpleListRow1),Plot) | String.Contains(Skin.String(SimpleListRow1),Info) | String.Contains(Skin.String(SimpleListRow1),Content)</visible>
		</control>
		<control type="image">
			<top>220</top>
			<width>363</width>
			<height>220</height>
			<texture background="true">White.png</texture>
			<colordiffuse>ACBackgroundColor_light</colordiffuse>
			<visible>String.IsEmpty(Skin.String(SimpleListRow2)) | String.Contains(Skin.String(SimpleListRow2),Plot) | String.Contains(Skin.String(SimpleListRow2),Info) | String.Contains(Skin.String(SimpleListRow2),Content)</visible>
		</control>
		<control type="image">
			<top>440</top>
			<width>363</width>
			<height>220</height>
			<texture diffuse="artworks/Infopanel_vertical_square_diffuse_flip.png">White.png</texture>
			<colordiffuse>ACBackgroundColor_light</colordiffuse>
			<visible>String.Contains(Skin.String(SimpleListRow3),Plot) | String.Contains(Skin.String(SimpleListRow3),Info) | String.Contains(Skin.String(SimpleListRow3),Content)</visible>
		</control>
		<control type="image"><!-- back clarartwork wildcard1-->
			<top>50</top>
			<width>363</width>
			<height>170</height>
			<texture colordiffuse="ACBackgroundColorClearart" diffuse="artworks/Infopanel_vertical_square_diffuse.png">$VAR[viewSimpleList-value-wildcard1-cleardiffuse]</texture>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
		</control>
		<control type="image"><!-- back clarartwork wildcard2-->
			<top>220</top>
			<width>363</width>
			<height>170</height>
			<texture colordiffuse="ACBackgroundColorClearart" diffuse="artworks/Infopanel_vertical_square_diffuse_flip.png">$VAR[viewSimpleList-value-wildcard2-cleardiffuse]</texture>
		</control>
		<control type="image"><!-- back clarartwork wildcard3-->
			<top>440</top>
			<width>363</width>
			<height>170</height>
			<texture colordiffuse="ACBackgroundColorClearart" diffuse="artworks/Infopanel_vertical_square_diffuse_flip.png">$VAR[viewSimpleList-value-wildcard3-cleardiffuse]</texture>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
		</control>
		<control type="image"><!-- artwork wildcard1-->
			<width>363</width>
			<height>220</height>
			<aspectratio scalediffuse="true" align="right" aligny="center">scale</aspectratio>
			<texture background="true" diffuse="artworks/Infopanel_vertical_square_diffuse.png">$VAR[viewSimpleList-value-wildcard1-thumbartwork]</texture>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
		</control>
		<control type="image"><!-- clarartwork wildcard1-->
			<width>363</width>
			<height>220</height>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
			<aspectratio align="center" aligny="center">keep</aspectratio>
			<bordersize>32</bordersize>
			<texture background="true">$VAR[viewSimpleList-value-wildcard1-clearartwork]</texture>
		</control>
		<control type="image"><!-- artwork wildcard2-->
			<top>220</top>
			<width>363</width>
			<height>220</height>
			<aspectratio scalediffuse="true" align="right" aligny="center">scale</aspectratio>
			<texture background="true">$VAR[viewSimpleList-value-wildcard2-thumbartwork]</texture>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
		</control>
		<control type="image"><!-- clarartwork wildcard2 -->
			<top>220</top>
			<width>363</width>
			<height>220</height>
			<fadetime>PanelartworksCrossFadeTime</fadetime>
			<aspectratio align="center" aligny="center">keep</aspectratio>
