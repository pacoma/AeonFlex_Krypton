			<top>19</top>
			<orientation>vertical</orientation>
			<itemgap>5</itemgap>
			<include>viewglobal_topelements_textinfo</include>
			<visible>String.IsEmpty(Skin.String(BannerinfoRow3)) | String.Contains(Skin.String(BannerinfoRow1),Info) | String.Contains(Skin.String(BannerinfoRow2),Info) | String.Contains(Skin.String(BannerinfoRow3),Info)</visible>
