						<width>350</width>
						<height>30</height>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]$INFO[ListItem.Episode, (,)]</label>
					</control>
				</itemlayout>
				<focusedlayout width="350" height="30">
